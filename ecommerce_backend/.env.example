# Application
APP_NAME=TechGear E-Commerce Backend
API_VERSION=0.1.0

# Database (default SQLite for dev)
# Examples:
# SQLite file:
DATABASE_URL=sqlite:///./ecommerce.db
# Postgres:
# DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME

# Security
# IMPORTANT: Change this in production. Use a long random string.
SECRET_KEY=CHANGE_ME_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS - comma separated list of origins
# Example: http://localhost:3000,http://127.0.0.1:3000
BACKEND_CORS_ORIGINS=http://localhost:3000

# Seed data on startup (only runs automatically when using SQLite by default)
SEED_DATA_ON_STARTUP=true
